<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dog Gallery</title>
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
    <div class="container">
    <h1>üê∂ Dog Gallery</h1>

    <form method="get" action="/" class="mb-4">
      <label for="breed" class="form-label">
        Filter by Breed <i class="fa-solid fa-dog"></i>
      </label>
      <div class="row g-2 align-items-end">
        <div class="col-md-6">
          <select class="form-select" name="breed" id="breed">
            <option value="">-- Random --</option>
            <% breeds.forEach(b => { %>
              <option value="<%= b %>" <%= selectedBreed === b ? 'selected' : '' %>><%= b %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-auto">
          <button class="btn btn-primary" type="submit">Search</button>
          <a href="/" class="btn btn-secondary btn-refresh">Refresh</a>
        </div>
      </div>
    </form>

    <div class="row gallery">
      <% images.forEach(img => { %>
        <div class="col-6 col-sm-4 col-md-3 col-lg-2">
          <div class="card">
            <img src="<%= img %>" class="card-img-top" alt="dog" />
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
